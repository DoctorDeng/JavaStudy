<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE web-app PUBLIC "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN" "http://java.sun.com/dtd/web-app_2_3.dtd">

<web-app>
    <!-- load order context-param -> listener -> filter -> servlet -->
    <display-name>NSTC</display-name>
    <context-param>
        <param-name>nstc/waf/locale/map</param-name>
        <param-value>page</param-value>
    </context-param>
    <context-param>
        <param-name>nstc/web/security/option</param-name>
        <param-value>login</param-value>
    </context-param>
    <context-param>
        <param-name>nstc/web/security/option/dn</param-name>
        <param-value>dn</param-value>
    </context-param>
    <context-param>
        <param-name>contextConfigLocation</param-name>
        <param-value>/WEB-INF/classes/**/*-root-applicationcontext.xml
    classpath:waf-framework/waf-applicationcontext.xml,classpath*:server/smp-httpclient-config.xml</param-value>
    </context-param>
    <context-param>
        <param-name>defaultRequestUrl</param-name>
        <param-value>nstc.do</param-value>
    </context-param>
    <filter>
        <filter-name>BaseAssemFilter</filter-name>
        <filter-class>com.nstc.assem.filter.BaseAssemFilter</filter-class>
        <init-param>
            <param-name>CharacterEncoding</param-name>
            <param-value>GBK</param-value>
        </init-param>
        <init-param>
            <param-name>XMLHttpCharacterEncoding</param-name>
            <param-value>UTF-8</param-value>
        </init-param>
    </filter>
    <filter>
        <filter-name>XssFilter</filter-name>
        <filter-class>com.nstc.nssafe.filter.XssFilter</filter-class>
        <init-param>
            <param-name>code</param-name>
            <param-value>GBK</param-value>
        </init-param>
    </filter>
    <!-- 
          这仅是基础配置，并不决定是否开启OpenSessionInView模式,决定是否开启的参数在app.xml中设置,
          每个应用可以控制自己的请求是开启还是关闭,这个过滤器不能被注释。 
  -->
    <filter>
        <filter-name>OpenSessionInViewFilter</filter-name>
        <filter-class>com.nstc.waf.spring.orm.hibernate3.ExtOpenSessionInView</filter-class>
        <init-param>
            <param-name>flushMode</param-name>
            <param-value>AUTO</param-value>
        </init-param>
        <init-param>
            <param-name>singleSession</param-name>
            <param-value>true</param-value>
        </init-param>
        <init-param>
            <param-name>sessionFactoryBeanName</param-name>
            <param-value>waf.sessionFactory</param-value>
        </init-param>
    </filter>
    <filter>
        <filter-name>RuntimeFilter</filter-name>
      <filter-class>com.nstc.uas.client.UASFilter</filter-class> 
      <!--  <filter-class> com.nstc.web.filter.RuntimeFilter</filter-class> -->
    </filter>
    <filter-mapping>
        <filter-name>BaseAssemFilter</filter-name>
        <url-pattern>*.do</url-pattern>
        <dispatcher>REQUEST</dispatcher>
        <dispatcher>FORWARD</dispatcher>
    </filter-mapping>
    <filter-mapping>
        <filter-name>BaseAssemFilter</filter-name>
        <url-pattern>*.sf</url-pattern>
        <dispatcher>REQUEST</dispatcher>
        <dispatcher>FORWARD</dispatcher>
    </filter-mapping>
    <filter-mapping>
        <filter-name>BaseAssemFilter</filter-name>
        <url-pattern>*.jsp</url-pattern>
        <dispatcher>REQUEST</dispatcher>
        <dispatcher>FORWARD</dispatcher>
    </filter-mapping>
    <filter-mapping>
        <filter-name>BaseAssemFilter</filter-name>
        <url-pattern>*.vm</url-pattern>
        <dispatcher>REQUEST</dispatcher>
        <dispatcher>FORWARD</dispatcher>
    </filter-mapping>
    <filter-mapping>
        <filter-name>XssFilter</filter-name>
        <url-pattern>*.do</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>XssFilter</filter-name>
        <url-pattern>*.sf</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>XssFilter</filter-name>
        <url-pattern>*.vm</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>XssFilter</filter-name>
        <url-pattern>*.jsp</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>XssFilter</filter-name>
        <url-pattern>*.xml</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>OpenSessionInViewFilter</filter-name>
        <url-pattern>*.do</url-pattern>
        <dispatcher>REQUEST</dispatcher>
        <dispatcher>FORWARD</dispatcher>
    </filter-mapping>
    <filter-mapping>
        <filter-name>OpenSessionInViewFilter</filter-name>
        <url-pattern>*.sf</url-pattern>
        <dispatcher>REQUEST</dispatcher>
        <dispatcher>FORWARD</dispatcher>
    </filter-mapping>
    <filter-mapping>
        <filter-name>RuntimeFilter</filter-name>
        <url-pattern>*.do</url-pattern>
        <dispatcher>REQUEST</dispatcher>
        <dispatcher>FORWARD</dispatcher>
    </filter-mapping>
    <filter-mapping>
        <filter-name>RuntimeFilter</filter-name>
        <url-pattern>*.sf</url-pattern>
        <dispatcher>REQUEST</dispatcher>
        <dispatcher>FORWARD</dispatcher>
    </filter-mapping>
    <listener>
        <listener-class>org.springframework.web.context.ContextLoaderListener</listener-class>
    </listener>
    <listener>
        <listener-class>com.nstc.uas.client.SessionListener</listener-class>
    </listener> 
    <listener>
        <listener-class>com.nstc.assem.NsAssemListener</listener-class>
    </listener>
    <listener>
        <listener-class>com.nstc.web.listener.SpringServiceLocatorListener</listener-class>
    </listener>
    <listener>
        <listener-class>com.nstc.framework.web.listener.CleanupSessionListener</listener-class>
    </listener>
    <servlet>
        <servlet-name>uasSerlvet</servlet-name>
        <servlet-class>com.nstc.uas.client.UASServlet</servlet-class>
        <load-on-startup>5</load-on-startup>
    </servlet>
    <servlet-mapping>
        <servlet-name>uasSerlvet</servlet-name>
        <url-pattern>*.uas</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>webEntryPoint</servlet-name>
        <servlet-class>com.nstc.waf.controller.web.MainServlet</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>
    <servlet>
        <servlet-name>SmartPageEntry</servlet-name>
        <servlet-class>com.nstc.smartform.mvc.SmartPageEntry</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>dwr-invoker</servlet-name>
        <servlet-class>com.nstc.assem.proxy.dwr.NstcDWRServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>DisplayChart</servlet-name>
        <servlet-class>org.jfree.chart.servlet.DisplayChart</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>JarFileServlet</servlet-name>
        <servlet-class>com.nstc.smartform.servlet.JarFileServlet</servlet-class>
        <load-on-startup>2</load-on-startup>
    </servlet>
    <servlet>
        <servlet-name>HttpServletBooter</servlet-name>
        <servlet-class>com.nstc.assem.boot.HttpServletBooter</servlet-class>
        <init-param>
            <param-name>ClassNames</param-name>
            <param-value>com.nstc.bizflow.web.action.InitFlowServiceProviderServlet,com.nstc.ini.CheckRepeatJarsServlet</param-value>
        </init-param>
        <load-on-startup>3</load-on-startup>
    </servlet>
    <servlet>
        <servlet-name>remote</servlet-name>
        <servlet-class>org.springframework.web.servlet.DispatcherServlet</servlet-class>
        <init-param>
            <param-name>contextConfigLocation</param-name>
            <param-value>/WEB-INF/classes/**/*-serivce-config.xml,
          classpath*:server/smp-servlet-config.xml</param-value>
        </init-param>
        <load-on-startup>-1</load-on-startup>
    </servlet>
    <servlet-mapping>
        <servlet-name>webEntryPoint</servlet-name>
        <url-pattern>*.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>SmartPageEntry</servlet-name>
        <url-pattern>*.sf</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>dwr-invoker</servlet-name>
        <url-pattern>/dwr/*</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>DisplayChart</servlet-name>
        <url-pattern>/displayChart</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>remote</servlet-name>
        <url-pattern>*.service</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>30</session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>
    <resource-ref>
        <res-ref-name>nstc/jdbc/WebData</res-ref-name>
        <res-type>javax.sql.DataSource</res-type>
        <res-auth>Container</res-auth>
    </resource-ref>
    <mime-mapping>
        <extension>xls</extension>
        <mime-type>application/msexcel</mime-type>
    </mime-mapping>
</web-app>

